rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow write access to instructor images
    match /instructors/{instructorId}/{imageType}/{fileName} {
      allow write: if true; // In production, add proper authentication
    }
    
    // Allow write access to resort images
    match /resorts/{resortId}/{imageType}/{fileName} {
      allow write: if true; // In production, add proper authentication
    }
  }
}